<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">


    <TextView
            android:text="This is my message"
            android:layout_width="wrap_content"
            android:maxWidth="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_from_row"
            app:layout_constraintStart_toEndOf="@+id/iv_chat_from_row"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_chat_from_row"
            android:background="@drawable/rounded_edittext_register"
            android:padding="16dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/googleg_standard_color_18"
            android:id="@+id/iv_chat_from_row"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
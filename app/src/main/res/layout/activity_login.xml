<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_light">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_et_login"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_edittext_register"
            android:hint="Email"
            android:paddingLeft="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_et_login"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_et_login"
            app:layout_constraintStart_toStartOf="@+id/email_et_login"
            app:layout_constraintEnd_toEndOf="@+id/email_et_login"
            android:background="@drawable/rounded_edittext_register"
            android:hint="Password"
            android:paddingLeft="16dp"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn_login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_et_login"
            app:layout_constraintEnd_toEndOf="@+id/password_et_login"
            app:layout_constraintStart_toStartOf="@+id/password_et_login"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="Back to registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_to_registration_et_login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/login_btn_login"
            app:layout_constraintStart_toStartOf="@+id/login_btn_login"
            app:layout_constraintEnd_toEndOf="@+id/login_btn_login"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>